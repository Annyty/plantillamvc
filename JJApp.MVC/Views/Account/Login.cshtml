@model JJApp.MVC.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section estilos{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />    
}
@section scripts{
    <script src="~/Scripts/lib/html5lightbox/jquery.js"></script>
    <script src="~/Scripts/lib/html5lightbox/html5lightbox.js"></script>
    <script type="text/javascript">

        $(function () {

            $('#idSimver').click(function () {

                $('#carrusel').show();
                $('#loginForm').hide();
                $('#panelAvisos').hide();
                $('#tutoriales').hide();
                $('#descargas').hide();

            });
            $('#idTutorial').click(function () {

                $('#loginForm').hide();
                $('#carrusel').hide();
                $('#panelAvisos').hide();
                $('#tutoriales').show();
                $('#descargas').hide();

            });
            $('#idSesion').click(function () {

                $('#carrusel').hide();
                $('#loginForm').show();
                $('#panelAvisos').hide();
                $('#tutoriales').hide();
                $('#descargas').hide();

            });
            $('#idAvisos').click(function () {

                $('#carrusel').hide();
                $('#loginForm').hide();
                $('#panelAvisos').show();
                $('#tutoriales').hide();
                $('#descargas').hide();

            });
            $('#idDescarga').click(function () {

                $('#carrusel').hide();
                $('#loginForm').hide();
                $('#panelAvisos').hide();
                $('#tutoriales').hide();
                $('#descargas').show();

            });

            $('#carrusel').show();
            $('#loginForm').hide();
            $('#panelAvisos').hide();
            $('#tutoriales').hide();
            $('#descargas').hide();


        });

    </script>
}

